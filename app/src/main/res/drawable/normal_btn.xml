<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4285F4" /> <!-- Set your desired pressed state color -->
            <corners android:radius="8dp" /> <!-- Set corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5" /> <!-- Set your default color -->
            <corners android:radius="8dp" /> <!-- Set corner radius -->
        </shape>
    </item>
</selector>

